<StartingScreen>:
    ScrollView:
        PresetListContainer:
            size_hint_y: None
            height: self.minimum_height
    Button:
        text: "add preset"
        font_size: 25
        size_hint: 1, None
        height: 50
        on_press:
            app.root.transition.direction: "left"
            app.root.current = "edit_preset"
            #app.add_preset()

<PresetBoxLayout>:
    BoxLayout:
        spacing: 10
        Button:
            text: "start training"
            on_press:
                app.root.transition.direction: "left"
                app.root.current = "training"
        Button:
            text: "edit preset"
            on_press:
                app.root.transition.direction: "left"
                app.root.current = "edit_preset"
                root.set_preset()
        Button:
            text: "remove preset"
            on_press:
                root.set_preset()

<ExerciseBoxLayout>:
    BoxLayout:
        spacing: 10
        Button:
            text: "edit exercise"
            on_press:
                app.root.transition.direction: "left"
                app.root.current = "edit_exercise"
                root.set_exercise()
        Button:
            text: "remove exercise"
            on_press:
                root.set_exercise()

<EditPresetScreen>:
    preset_name: preset_name
    sv: sv
    GridLayout:
        cols: 1
        BoxLayout:
            size_hint_y: None
            height: 40
            Button:
                text: "<--"
                font_size: 25
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'start'
            Button:
                text: "Add exercise"
                font_size: 25
                on_press:
                    app.root.transition.direction = 'left'
                    app.root.current = 'edit_exercise'

        Label:
            text: root.preset_name.text
            size_hint_y: None
            height: 100
            font_size: 40
        BoxLayout:
            size_hint_y: None
            height: 100
            Label:
                text: "Name:"
                font_size: 25
            TextInput:
                id: preset_name
                font_size: 25
                multiline: False
        ScrollView:
            id: sv
            ExerciseListContainer:


<EditExerciseScreen>:
    exercise_name: exercise_name
    exercise_brk: exercise_brk
    exercise_reps: exercise_reps
    exercise_time: exercise_time
    toggle_button: toggle_button
    ScrollView:
        GridLayout:
            cols: 1
            BoxLayout:
                size_hint_y: None
                height: 40
                Button:
                    text: "<--"
                    font_size: 25
                    on_press:
                        app.root.transition.direction = 'right'
                        app.root.current = 'edit_preset'
                Button:
                    text: "Save"
                    font_size: 25
                    on_press:
                        app.root.transition.direction = 'right'
                        app.root.current = 'edit_preset'
                        root.save()
            BoxLayout:
                Label:
                    text: "Name:"
                TextInput:
                    id: exercise_name
            BoxLayout:
                Label:
                    text: "Break duration:"
                TextInput:
                    id: exercise_brk
            BoxLayout:
                Label:
                    text: "Repetitions:"
                TextInput:
                    id: exercise_reps
            BoxLayout:
                Label:
                    text: "Duration:"
                TextInput:
                    id: exercise_time
            ToggleButton:
                id: toggle_button
                font_size: 25
                on_state:
                    root.on_toggle_button_state(self)


