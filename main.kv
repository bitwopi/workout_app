<StartingScreen>:
    preset_list: preset_list
    edit_button: edit_button
    copy_button: copy_button
    remove_button: remove_button
    start_button: start_button
    GridLayout:
        cols: 1
        BoxLayout:
            size_hint: 1, None
            height: 40
            Button:
                text: "Add preset"
                font_size: 25
                on_press:
                    app.root.transition.direction: "left"
                    app.root.current = "edit_preset"
            Button:
                id: edit_button
                text: "Edit preset"
                font_size: 25
                disabled: True
                on_press:
                    root.edit()
                    app.root.transition.direction: "left"
                    app.root.current = "edit_preset"
            Button:
                id: copy_button
                text: "Copy preset"
                font_size: 25
                disabled: True
                on_press:
                    root.copy()
            Button:
                id: remove_button
                text: "Remove preset"
                font_size: 25
                disabled: True
                on_press:
                    root.remove()
        RV:
            id: preset_list
        Button:
            id: start_button
            text: "Start training"
            font_size: 25
            size_hint: 1, None
            height: 40
            disabled: True
            on_press:
                root.start_training()
                app.root.transition.direction: "left"
                app.root.current = "training"




<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (1, 0, 0, 1) if self.selected else (.0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0, 0.9, .1, .3)
        Rectangle:
            pos: self.pos
            size: self.size

<EditPresetScreen>:
    preset_name: preset_name
    preset_exercises: preset_exercises
    grid: grid
    exercise_name: exercise_name
    exercise_brk: exercise_brk
    exercise_reps: exercise_reps
    exercise_time: exercise_time
    toggle_button: toggle_button
    GridLayout:
        cols: 1
        id: grid
        BoxLayout:
            size_hint_y: None
            height: 40
            Button:
                text: "<--"
                font_size: 25
                on_press:
                    app.current_preset = None
                    app.root.transition.direction = 'right'
                    app.root.current = 'start'
            Button:
                text: "Add exercise"
                font_size: 25
                on_press:
                    root.add()
            Button:
                text: "Save preset"
                font_size: 25
                on_press:
                    root.save()
                    app.root.transition.direction = 'right'
                    app.root.current = 'start'
        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: "Preset Name:"
                font_size: 25
            TextInput:
                id: preset_name
                font_size: 25
                multiline: False
        GridLayout:
            cols: 2
            size_hint_y: None
            height: 100
            BoxLayout:
                Label:
                    text: "Exercise name:"
                TextInput:
                    id: exercise_name
            BoxLayout:
                Label:
                    text: "Exercise break duration:"
                TextInput:
                    id: exercise_brk
            BoxLayout:
                Label:
                    text: "Exercise repetitions:"
                TextInput:
                    id: exercise_reps
            BoxLayout:
                Label:
                    text: "Exercise duration:"
                TextInput:
                    id: exercise_time
        ToggleButton:
            id: toggle_button
            size_hint_y: None
            height: 50
            font_size: 25
            on_state:
                root.on_toggle_button_state(self)
        BoxLayout:
            size_hint_y: None
            height: 40
            Button:
                text: "Save exercise"
                on_press:
                    root.save_exercise()
            Button:
                text: "remove exercise"
                on_press:
                    root.delete()
        RV:
            id: preset_exercises

<RV>:
    list: list
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        id: list
        default_size: None, 50
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<TrainingScreen>:
    timer: timer
    btn: btn
    exercise_name: exercise_name
    auto_btn: auto_btn

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "<--"
                font_size: 25
                on_press:
                    app.current_preset = None
                    app.root.transition.direction = 'right'
                    app.root.current = 'start'
            ToggleButton:
                id: auto_btn
                text: "Auto"
                font_size: 25
        Label:
            id: exercise_name
            font_size: 25
        Label:
            id: timer
            text: "timer"
            font_size: 25
        Button:
            id: btn
            text: "Start"
            font_size: 25
            on_press:
                root.on_click()
